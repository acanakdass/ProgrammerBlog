@model UserLoginDto
@{ 
    Layout = "_UserLoginLayout";
    ViewBag.Title = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="">
                    <h3 class="text-center font-weight-light my-4"><i class="fas fa-key"></i>  Giriş Yap</h3>
                <hr />
                </div>
                <div class="card-body">
                    <form asp-controller="User" asp-action="Login" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        @*<div class="form-group">
                            <label class="small mb-1" asp-for="Email"></label>
                            <input class="form-control py-4" asp-for="Email" type="email"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <label class="small mb-1" asp-for="UserName"></label>
                            <input class="form-control py-4" asp-for="UserName" type="text"/>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Password"></label>
                            <input class="form-control py-4" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                                <label class="custom-control-label" asp-for="RememberMe">
                                </label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn-link btn" ><i class="fas fa-user-lock"></i> Şifrenizi mi Unuttunuz ?</a>
                            <button type="submit" class="btn btn-primary" ><i class="fas fa-sign-in-alt"></i> Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-success btn-block text-white"> <i class="fas fa-user-edit"></i> Kayıt Ol</a>
                </div>
            </div>
        </div>
    </div>
</div>