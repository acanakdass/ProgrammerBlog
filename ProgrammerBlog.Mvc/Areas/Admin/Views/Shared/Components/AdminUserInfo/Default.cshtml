        <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown">
            @*<i class="fas fa-user fa-fw"></i>*@

            <img src="~/userImages/@Model.User.Image" style=" border: 1px; border-radius: 100%; height: 50px;" width="50px" alt="Alternate Text" />

