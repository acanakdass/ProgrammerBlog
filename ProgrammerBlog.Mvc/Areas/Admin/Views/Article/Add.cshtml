@model ArticleAddViewModel


<ol class="breadcrumb mb-2 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Makaleler</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Add">Makale Oluştur</a></li>
</ol>

<form asp-controller="Article" asp-action="Add" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger" id="validationSummary" aria-hidden="true"></div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Makale Başlığı" asp-for="Title" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <textarea id="text-editor" asp-for="Content"></textarea>
                        <span asp-validation-for="Content"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Temel Konfigürasyonlar</div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="categoryList" asp-for="CategoryId">Kategori</label>
                        <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name") )" >
                            <option></option>
                        </select>
                        <span asp-validation-for="CategoryId"></span>

                        <div class="form-group">
                            <label for="datepicker" asp-for="Date">Tarih</label>
                            <input type="datetime" asp-for="Date" id="datepicker" class="form-control" value="@DateTime.Now.ToShortDateString()" />
                            <span asp-validation-for="Date"></span>
                        </div>
                        <div class="form-group">
                            <label for="thumbnailUpload" asp-for="ThumbnailFile">Küçük Resim</label>
                            <input type="file" id="thumbnailUpload" asp-for="ThumbnailFile" accept="image/*" class="form-control-file" />
                            <span asp-validation-for="ThumbnailFile"></span>

                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="isActive" asp-for="IsActive" class="form-check-input" />
                            <label for="isActive" asp-for="IsActive" class="form-check-label">Aktif mi</label>
                            <span asp-validation-for="IsActive"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block mt-2">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-2">
            <div class="card">
                <div class="card-header">Seo Optimizasyonu</div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="seoWriter" asp-for="SeoAuthor">Yazar Adı</label>
                            <input type="text" id="seoWriter" asp-for="SeoAuthor" class="form-control" />
                            <span asp-validation-for="SeoAuthor"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="seoTags" asp-for="SeoTags">Etiketler</label>
                            <input type="text" id="seoTags" asp-for="SeoTags" class="form-control" />
                            <span asp-validation-for="SeoTags"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="seoDescription" asp-for="SeoDescription">Makale Açıklaması</label>
                            <input type="text" id="seoDescription" asp-for="SeoDescription" class="form-control" />
                            <span asp-validation-for="SeoDescription"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</form>
